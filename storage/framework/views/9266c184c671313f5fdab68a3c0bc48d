<?php $__env->stopSection(); ?>
<?php $__env->startSection('script'); ?>
<script type="text/javascript">
$(document).ready(function(){
    var lock = false;
    $(".glpc_div_button").click(function(e){
        e.preventDefault();
        if (lock) {return;}
        lock = true;
        /*-----ajax事件开始-----*/
        $.ajax({
            type: 'post',
            url: '<?php echo e(route('opo.confirm.offline.pay', ['id'=>$order->id])); ?>',
            data: $('form').serialize(),
            dataType: 'json',
            success: function (res) {
                if(res.code==0) {
                    location.href = '<?php echo e(route('opo')); ?>';
                } else {
                    Popup.init({
                        popHtml:'<p>'+res.message+'</p>',
                        popFlash:{
                            flashSwitch:true,
                            flashTime:2000
                        }
                    });
                    lock = false;
                }
            }
        });
        return false;
    });
});
</script>
<?php $__env->stopSection(); ?>
<?php echo $__env->make('layout.default', array_except(get_defined_vars(), array('__data', '__path')))->render(); ?>